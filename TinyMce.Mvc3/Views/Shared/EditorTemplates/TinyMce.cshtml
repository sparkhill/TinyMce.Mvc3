            script_url: '@Url.Content("~/Scripts/tinymce/tiny_mce.js")',
            theme: "advanced",
            height: "500",
            width: "100%",
            verify_html: false,
            plugins: "mediapicker",
            theme_advanced_buttons1: "mediapicker,|,bold,italic,underline,strikethrough,|,justifyleft,justifycenter,justifyright,justifyfull,formatselect,fontselect,fontsizeselect,forecolor,backcolor,undo,redo,|,link,unlink,bullist,numlist",
            theme_advanced_buttons2: "",
            theme_advanced_buttons3: "",
            theme_advanced_toolbar_location: "top",
            theme_advanced_toolbar_align: "left",
            convert_urls: false
        });
    });
</script>